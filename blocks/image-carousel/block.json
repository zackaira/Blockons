{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "blockons/image-carousel",
	"title": "Image Carousel",
	"textdomain": "blockons",
	"icon": "format-image",
	"category": "blockons-category",
	"keywords": ["image", "carousel", "gallery", "picture", "slider"],
	"attributes": {
		"uniqueId": {
			"type": "string"
		},
		"alignment": {
			"type": "string",
			"default": "left"
		},
		"slides": {
			"type": "array",
			"default": []
		},
		"carouselType": {
			"type": "string",
			"default": "slide"
		},
		"carouselNumber": {
			"type": "number",
			"default": 1
		},
		"carouselRewind": {
			"type": "boolean",
			"default": false
		},
		"carouselGap": {
			"type": "number",
			"default": 15
		},
		"captionPosition": {
			"type": "string",
			"default": "one"
		},
		"carouselStyle": {
			"type": "string",
			"default": "one"
		},
		"carouselLayout": {
			"type": "string",
			"default": "vertical"
		},
		"controlsOnHover": {
			"type": "boolean",
			"default": false
		},
		"carouselAuto": {
			"type": "boolean",
			"default": false
		},
		"carouselArrows": {
			"type": "boolean",
			"default": true
		},
		"arrowStyle": {
			"type": "string",
			"default": "one"
		},
		"carouselArrowIcon": {
			"type": "string",
			"default": "arrow-right"
		},
		"carouselPagination": {
			"type": "boolean",
			"default": true
		},
		"carouselPagDesign": {
			"type": "string",
			"default": "dots"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"viewScript": "file:./splide.js",
	"style": [
		"file:./style-index.css",
		"blockons-fontawesome",
		"blockons-splidecss"
	]
}
