{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "blockons/featured-product",
	"title": "Block-Ons Featured Product",
	"textdomain": "blockons",
	"icon": "admin-users",
	"category": "blockons-category",
	"keywords": ["featured product", "product"],
	"attributes": {
		"alignment": {
			"type": "string",
			"default": "left"
		},
		"selectedProduct": {
			"type": "object"
		},
		"padding": {
			"type": "number",
			"default": 15
		},
		"layout": {
			"type": "string",
			"default": "one"
		},
		"layoutSwitch": {
			"type": "boolean",
			"default": false
		},
		"layoutTwoOverlay": {
			"type": "boolean",
			"default": true
		},
		"blockBgColor": {
			"type": "string",
			"default": "#FFF"
		},
		"blockFontColor": {
			"type": "string",
			"default": "#FFF"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"script": "blockons-file",
	"style": ["file:./style-index.css", "blockons-fontawesome"]
}
