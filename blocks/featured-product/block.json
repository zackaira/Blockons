{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "blockons/featured-product",
	"title": "Block-Ons Featured Product",
	"textdomain": "blockons",
	"icon": "star-empty",
	"category": "blockons-category",
	"keywords": ["featured", "product", "woocommerce"],
	"styles": [
		{ "name": "default", "label": "Default", "isDefault": true },
		{ "name": "drop-shadow", "label": "Drop Shadow" }
	],
	"attributes": {
		"alignment": {
			"type": "string",
			"default": "left"
		},
		"selectedProduct": {
			"type": "object"
		},
		"padding": {
			"type": "number",
			"default": 15
		},
		"innerPadding": {
			"type": "number",
			"default": 30
		},
		"layout": {
			"type": "string",
			"default": "one"
		},
		"layoutSwitch": {
			"type": "boolean",
			"default": false
		},
		"layoutTwoOverlay": {
			"type": "boolean",
			"default": true
		},
		"overlayOpacity": {
			"type": "number",
			"default": 35
		},
		"showDesc": {
			"type": "boolean",
			"default": true
		},
		"showPrice": {
			"type": "boolean",
			"default": true
		},
		"showButton": {
			"type": "boolean",
			"default": true
		},
		"blockBgColor": {
			"type": "string",
			"default": "#FFF"
		},
		"blockFontColor": {
			"type": "string",
			"default": "inherit"
		},
		"buttonText": {
			"type": "string",
			"default": "View Product"
		},
		"detailWidth": {
			"type": "number",
			"default": 50
		},
		"imgHeight": {
			"type": "number",
			"default": "auto"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"script": "blockons-file",
	"style": ["file:./style-index.css", "blockons-fontawesome"]
}
