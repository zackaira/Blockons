{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "blockons/image-gallery",
	"title": "Image Gallery",
	"textdomain": "blockons",
	"icon": "format-gallery",
	"category": "blockons-category",
	"keywords": ["image", "gallery", "picture", "img", "advanced"],
	"attributes": {
		"uniqueId": {
			"type": "string"
		},
		"galleryImages": {
			"type": "array",
			"default": []
		},
		"columns": {
			"type": "number",
			"default": 4
		},
		"gridGap": {
			"type": "number",
			"default": 10
		},
		"layout": {
			"type": "string",
			"default": "grid"
		},
		"imageProportion": {
			"type": "string",
			"default": "actual"
		},
		"imageHover": {
			"type": "string",
			"default": "none"
		},
		"imageCaption": {
			"type": "string",
			"default": "none"
		},
		"captionOnHover": {
			"type": "boolean",
			"default": false
		},
		"captionAnimation": {
			"type": "string",
			"default": "fade"
		},
		"imageBgColor": {
			"type": "string",
			"default": "#f0f0f0"
		},
		"captionBgColor": {
			"type": "string",
			"default": "#000"
		},
		"captionOpacity": {
			"type": "number",
			"default": 0.75
		},
		"captionFontColor": {
			"type": "string",
			"default": "#FFF"
		},
		"captionFontSize": {
			"type": "number",
			"default": 13
		},
		"popupEnable": {
			"type": "boolean",
			"default": false
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"script": "blockons-js",
	"viewScript": "blockons-image-gallery",
	"style": [
		"file:./style-index.css",
		"blockons-fontawesome",
		"blockons-venobox-style"
	]
}
